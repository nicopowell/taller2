@model List<MVC.Models.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
}

<h2>Listado de Productos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Producto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Descripción del Producto</th>
            <th>Precio Unitario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@producto.IdProducto">Modificar</a> |
                    <a asp-action="Details" asp-route-id="@producto.IdProducto">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@producto.IdProducto">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>